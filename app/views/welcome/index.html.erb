<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag :rooms, {'class' => 'form-signin'} do %>
      <h2 class="form-signin-heading">Please create new room</h2>
      <label for="inputRoomName" class="sr-only">Room name</label>
      <input type="text" name="name" id="inputRoomName" class="form-control" placeholder="Room name" required="" autofocus="">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Create new room</button>
    <% end %>
  </div>
</div>
